{
  "name": "skippy",
  "packageManager": "bun@1.2.20",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "skippy": "bun run apps/cli/src/index.ts",
    "build": "turbo build",
    "test": "turbo test",
    "lint": "eslint 'packages/*/src/**/*.ts' 'packages/*/test/**/*.ts' 'apps/*/src/**/*.ts' 'apps/*/test/**/*.ts' --ignore-pattern='*.d.ts'",
    "lint:fix": "eslint 'packages/*/src/**/*.ts' 'packages/*/test/**/*.ts' 'apps/*/src/**/*.ts' 'apps/*/test/**/*.ts' --ignore-pattern='*.d.ts' --fix",
    "typecheck": "turbo typecheck",
    "dev": "turbo dev",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.5",
    "@types/node": "^20.0.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "turbo": "^2.0.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.52.0",
    "vitest": "^1.6.0"
  },
  "trustedDependencies": [
    "better-sqlite3",
    "esbuild",
    "protobufjs"
  ]
}
